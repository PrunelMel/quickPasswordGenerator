{
    "name": "7ive/home_handler",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Eroto\\HomeHandler\\": "src/"
        }
    },
    "scripts": {
        "prepare": [
            "@composer install",
            "./bin/doctrine orm:schema:update --complete --force"
        ],
        "winprepare": [
            "@composer install",
            "php ./bin/doctrine orm:schema:update --complete --force"
        ],
        "serve": [
            "php -S localhost:8005 -t public"
        ]
    },
    "require": {
        "php":"8.2.*",
        "slim/slim":"4.12.*",
        "ext-sqlite3": "*",
        "slim/psr7": "^1.6",
        "slim/twig-view": "^3.3",
        "slim/php-view": "^3.2",
        "doctrine/orm": "^3.1",
        "symfony/cache": "^7.0",
        "doctrine/migrations": "^3.7"
    }
}
